<section>
  <nav>
    <%= link_to "ᐸ", categories_path %>
    <h2>Transactions</h2>
    <%= button_to "Log out", destroy_user_session_path, method: :delete, data: { turbo: false } %>
  </nav>
  <div class='total-credit'>
    <p>Gift credit</p>
    <p class='value'>$ <%=@total_amount%></p>
